  <robot name="amr">

    <material name= "white">
      <color rgba="1 1 1 1" />
    </material>

    <material name= "orange">
      <color rgba="1 0.3 0.1 1" />
    </material>

    <material name= "blue">
      <color rgba="0.2 0.2 1 1" />
    </material>

    <material name= "black">
      <color rgba="0 0 0 1" />
    </material>

    <material name= "red">
      <color rgba="1 0 0 1" />
    </material>

  
    <!-- Base Footprint -->
    <link name="base_link"/>

    <!-- Base Link -->
    <link name="chassis">
      <visual name="base_visual">
        <origin xyz="0 0 0.325" rpy="0 0 0"/>
        <geometry>
          <box size="0.72 0.45 0.61"/>
          <!-- <box size="0.45 0.72 0.61"/>-->
        </geometry>
        <material name="white"/>
      </visual>
    </link>

    <link name="laser">
      <visual name="laser_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.0385" length="0.03885"/>
        </geometry>
        <material name="black"/>
      </visual>
    </link>

    <link name="lidar2_link">
      <visual name="lidar2_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.0385" length="0.03885"/>
        </geometry>
        <material name="black"/>
      </visual>
    </link>

    <link name="lidar1_link">
      <visual name="lidar1_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.0385" length="0.03885"/>
        </geometry>
          <material name="black"/>
      </visual>
    </link>


    <!-- Left Wheel Link -->
    <link name="wheel_left_link">
      <collision name="wheel_left_collision">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.085" length="0.046"/>
        </geometry>
      </collision>
      <visual name="wheel_left_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.085" length="0.046"/>
        </geometry>
        <material name="black"/>
      </visual>
    </link>

    <!-- Right Wheel Link -->
    <link name="wheel_right_link">
      <collision name="wheel_right_collision">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.085" length="0.046"/>
        </geometry>
      </collision>
      <visual name="wheel_right_visual">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.085" length="0.046"/>
        </geometry>
        <material name="black"/>
      </visual>
    </link>

    <!-- Joint definitions -->

    <joint name="base_joint" type="fixed">
      <parent link="base_link"/>
      <child link="chassis"/>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
    </joint>

    <joint name="wheel_left_joint" type="continuous">
      <parent link="chassis"/>
      <child link="wheel_left_link"/>
      <origin xyz="0 0.145 0.085" rpy="-1.57 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <joint name="wheel_right_joint" type="continuous">
      <parent link="chassis"/>
      <child link="wheel_right_link"/>
      <origin xyz="0 -0.145 0.085" rpy="1.57 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    <joint name="lidar_joint" type="fixed">
      <parent link="chassis"/>
      <child link="laser"/>
      <origin xyz="0.0 0.0 0.04" rpy="3.14 0 -3.14"/>
      <!-- <axis xyz="0 1 0"/> -->
    </joint>

    <joint name="lidar1_joint" type="fixed">
      <parent link="chassis"/>
      <child link="lidar1_link"/>
      <origin xyz="0.345 0.0 0.04" rpy="3.14 0 -3.14"/>
      <!-- <axis xyz="0 1 0"/> -->
    </joint>

    <joint name="lidar2_joint" type="fixed">
      <parent link="chassis"/>
      <child link="lidar2_link"/>
      <origin xyz="-0.345 -0.0 0.04" rpy="3.14 0 0"/>
      <!-- <axis xyz="0 1 0"/> -->
    </joint>


  </robot>